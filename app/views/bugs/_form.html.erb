<%= form_with(model: bug) do |form| %>
  <% if bug.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

      <ul>
        <% bug.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="display: flex; flex-direction:column; justify-content:center; align-items:center;">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div style="display: flex; flex-direction:column; justify-content:center; align-items:center;">
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div style="display: flex; flex-direction:column; justify-content:center; align-items:center;">
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category, [["Bug", "bug"], ["Feature", "feature"]] %>
  </div>

  <div style="display: flex; flex-direction:column; justify-content:center; align-items:center;">
    <%= form.label :image %>
    <%= form.file_field :image, accept: "image/png, image/gif" %>
  </div>


  <div style="display: flex; flex-direction:column; justify-content:center; align-items:center;">
    <%= form.label :project_id, style: "display: block" %>
    <%= form.collection_select :project_id, @projects, :id, :name, prompt: "Select a project", class: "add-project-member-input" %>
  </div>

  <div style="display: flex; flex-direction:column; justify-content:center; align-items:center;">
    <%= form.submit %>
  </div>
<% end %>
